{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "reactNamespace": "React",
    "rootDir": "pages",
    "outDir": "public",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "noEmitHelpers": true,
    "baseUrl": ".",
    "paths": {
      "app/*": [ "src/app/*" ]
    },
    "types": [
      "node",
      "react-globals"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "pages/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}